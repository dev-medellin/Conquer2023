
@{
    ViewBag.CustomTitle = "Statistics";
    ViewBag.Title = "Stats";
    Layout = "~/Views/page.cshtml";
}
<div class="registration-login">
    <div class="page normal-page">
        <div class="container ">

            <style>
                .table td {
                    color: lightblue;
                }
            </style>
            <div class="col-lg-12 col-md-12 register-form-wrapper wcontainer">

                <div class="title-wrapper">
                    <h3 class="widget-title">
                        CHECK OUR STATISTICS
                    </h3>
                    <div class="clear"></div>
                </div>
                @{
                    PhoenixConquer.App_Start.OnlineCounter.GetOnline();
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th></th>
                                <th class="text-center">
                                    Gold Rate
                                </th>
                                <th class="text-center">
                                    Exp Rate
                                </th>
                                <th class="text-center">
                                    Socket Rate
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th class="text-nowrap" scope="row">Rates</th>
                                <td>x2</td>
                                <td>x3</td>
                                <td>x4</td>

                            </tr>

                            <tr>
                                <th class="text-nowrap" scope="row">Monsters Killed</th>
                                <td colspan="5">@string.Format("{0:n0}", int.Parse(PhoenixConquer.App_Start.OnlineCounter.MonstersKilled))</td>
                            </tr>
                            <tr>
                                <th class="text-nowrap" scope="row">One Socket Items</th>
                                <td colspan="5">@string.Format("{0:n0}", int.Parse(PhoenixConquer.App_Start.OnlineCounter.OneSocket))</td>
                            </tr>
                            <tr>
                                <th class="text-nowrap" scope="row">Two Sockets Items</th>
                                <td colspan="5">@string.Format("{0:n0}", int.Parse(PhoenixConquer.App_Start.OnlineCounter.TwoSockets))</td>
                            </tr>
                            <tr>
                                <th class="text-nowrap" scope="row">Monsters Gold Dropped</th>
                                <td colspan="5">@string.Format("{0:n0}", int.Parse(PhoenixConquer.App_Start.OnlineCounter.MonstersGold))</td>
                            </tr>
                        </tbody>
                    </table>
                }

            </div>
        </div>
    </div>

</div>
