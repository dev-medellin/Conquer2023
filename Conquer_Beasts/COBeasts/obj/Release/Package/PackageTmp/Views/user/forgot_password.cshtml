@model PhoenixConquer.Models.ForgotPassModel
@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/page.cshtml";
}

<div class="site-content" role="main">
    <section class="d-flex align-items-center py-4 py-md-7 px-2 px-md-2">
        <div class="container">
            <div class="row py-lg-7">
                <div class="col-md-5 mx-auto">
                    <div class="card mb-0">
                        <div class="card-header">
                            <h5 class="card-title">Forgotten password</h5>
                        </div>
                        <div class="card-body p-3">
                            @using (Html.BeginForm("forgot_password", "user", new { ReturnUrl = ViewBag.ReturnUrl },
FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="ya ya-email"></i></span>
                                    </div>
                                    <input type="text" class="form-control" id="Email" name="Email" placeholder="Enter your email" required="">
                                    @Html.ValidationMessageFor(model => model.Email, "")

                                </div>
                                <br />
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="ya ya-user"></i></span>
                                    </div>
                                    <input type="text" class="form-control" id="Username" name="Username" placeholder="Enter your username" required="">
                                    @Html.ValidationMessageFor(model => model.Username, "")
                                </div>
                                <br />

                                <center>
                                    <div class="g-recaptcha" data-sitekey="@System.Web.Configuration.WebConfigurationManager.AppSettings["captchaSiteKey"]"></div>
                                    <small class="form-text">We'll send you a verifier link to your email address.</small>

                                </center>
                                <br />
                                <div class="card-footer">
                                    <button type="submit" class="btn btn-primary btn-block">Reset Password</button>
                                </div>
                                @ViewBag.Message
                            }
                        </div>

                    </div>
                    <!-- end card -->
                </div>
            </div>
        </div>
    </section>
</div>
